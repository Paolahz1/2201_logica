#include <iostream>
using namespace std;
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	int psc=15;
	int c[psc];
	for(int i =0;i<psc;i++){
		c[i]=0;
	}
		

	for(int i=1; i<=psc; i++){ //inicializa i, pregunta si i es menos al numeros de espacios que hay. 
		cout<<"Ingrese su numero: ";
		cin>>c[i]; //ingresa el numero al puesto i 
	}
	
	for(int i=1; i<=psc;i++){
	
		if(c[i]%2==0){
				cout<<"["<<i<<"]"<<"->"<<c[i]<<" Es par"<<endl;	
		}
		else{
		
				cout<<"["<<i<<"]"<<"->"<<c[i]<<"Es impar"<<endl;	
		}
	}	
	
	return 0;
}
